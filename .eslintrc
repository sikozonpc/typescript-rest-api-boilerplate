{
  "parser": "@typescript-eslint/parser",
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "no-unused-vars": "off",
    "semi": [
      "error",
      "never"
    ],
    "prefer-const": "error",
    "no-var": "error",
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "node/no-missing-import": "off"
  }
}
