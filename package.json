{
  "name": "typescript-rest-api-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon --inspect ./src/index.ts",
    "lint": "eslint  ./src/**/*.ts --fix",
    "check-types": "tsc --noEmit",
    "test": "jest --coverage --verbose",
    "open-cov": "open coverage/lcov-report/index.html",
    "start": "npx pm2 start pm2.yaml -- --port 1520",
    "build": "tsc "
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn check-types && yarn lint && git add . && yarn test"
    }
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "devDependencies": {
    "@types/bcrypt": "3.0.0",
    "@types/express": "4.17.2",
    "@types/express-validator": "3.0.0",
    "@types/jest": "24.0.23",
    "@types/jsonwebtoken": "8.3.5",
    "@types/mongoose": "5.5.32",
    "@types/node": "12.12.14",
    "@types/signale": "1.2.1",
    "@typescript-eslint/eslint-plugin": "2.10.0",
    "@typescript-eslint/parser": "2.10.0",
    "eslint": "6.7.2",
    "eslint-config-standard": "14.1.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-node": "10.0.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.1",
    "husky": "3.1.0",
    "jest": "24.9.0",
    "nodemon": "2.0.1",
    "ts-jest": "24.2.0",
    "ts-node": "8.5.4",
    "typescript": "3.7.3"
  },
  "dependencies": {
    "@types/compression": "1.0.1",
    "@types/cors": "2.8.6",
    "@types/request-promise": "4.1.45",
    "@types/supertest": "2.0.8",
    "@types/swagger-ui-express": "4.1.0",
    "bcrypt": "5.0.0",
    "body-parser": "1.19.0",
    "compression": "1.7.4",
    "cors": "2.8.5",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "express-validator": "6.3.0",
    "http": "0.0.0",
    "jsonwebtoken": "8.5.1",
    "mongodb": "3.3.5",
    "mongodb-memory-server": "6.1.1",
    "mongoose": "5.7.14",
    "pm2": "4.2.1",
    "request-promise": "4.2.5",
    "signale": "1.4.0",
    "supertest": "4.0.2",
    "swagger-ui-express": "4.1.2"
  }
}
